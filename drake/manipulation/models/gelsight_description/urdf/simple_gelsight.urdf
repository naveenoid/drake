<?xml version="1.0"?>
<!--A simplified model of the gelsight sensor (dense geometry sensing
    system developed at Ted Addelson's lab@MIT .
-->
<robot name="gelsight_sensor">
  <link name="gelsight_base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.001" />
            <inertia ixx="0.0.0021233" ixy="0" ixz="0" iyy="0.0021233" iyz="0"
                izz="0.004235" />
    </inertial>
    <visual>
      <origin xyz="0 0.0 0.0" rpy="0  0 0" />
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="light_grey">
        <color rgba="0.85 0.85 0.925 1" />
      </material>
    </visual>
    <collision>
     <origin xyz="0 0.0 0.0" rpy="0  0 0" />
     <geometry>
       <cylinder length="0.02" radius="0.02" />
     </geometry>
    </collision>
   </link>
   <joint name="gelsight_camera_joint" type="fixed">
     <origin rpy="0 0 0" xyz="0.0 0.00 0"/>
     <parent link="gelsight_base_link"/>
     <child link="gelsight_camera_head"/>
   </joint>
   <link name="gelsight_camera_head">
        <inertial>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <mass value="0.001" />
          <inertia ixx="0.01703125" ixy="0" ixz="0" iyy="0.01703125" iyz="0"
                   izz="0.0003125" />
        </inertial>
        <visual>
          <origin xyz="0 0.0 0" rpy="0 0 0" />
          <geometry>
            <sphere radius="0.017" />
          </geometry>
          <material name="white">
            <color rgba="1.0 1.0 1.0 0.9"/>
          </material>
        </visual>
        <collision>
          <origin xyz="0 0.0 0.0" rpy="0  0 0" />
          <geometry>
            <sphere radius="0.017" />
          </geometry>
        </collision>
      </link>
</robot>
